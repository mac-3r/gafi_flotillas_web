<br>
<div class="container">
    <div class="card card-custom gutter-b">
        <div class="card-header ">
            <div class="card-title">
                <h3 class="card-label">Clientes
                 <span class="text-muted pt-2 font-size-sm d-block">Cat√°logo de clientes</span>
                </h3>
            </div>
        </div>
        <div class="card-body">
        <table class="table">
          <thead>
            <tr>
              <th>Clave</th>
              <th>CEDIS</th>
              <th>Empresa</th>
              <th>Estatus</th>
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <% @customers.each do |customer| %>
              <tr>
                <td><%= customer.clave %></td>
                <td><%= customer.catalog_branch.decripcion %></td>
                <td><%= customer.catalog_company.nombre %></td>
                <% if customer.estatus == 1 %>
                  <td>Activo</td>
                <% else %>
                  <td>Inactivo</td>
                <% end %>
              </tr>
            <% end %>
          </tbody>
        </table>
        </div>
    </div>
</div>