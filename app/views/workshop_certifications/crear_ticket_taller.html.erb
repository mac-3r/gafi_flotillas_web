<br>
<div class="container">
    <div class="card card-custom gutter-b">
        <div class="row">
            <div class="col-lg-12">
                <div class="card-header">
                    <div class="card-title">
                        <h3 class="card-label float-left">Registrar taller</h3>
                        <%= link_to 'Regresar', workshop_certifications_path, class: "btn btn-default float-right" %>
                    </div>
                </div>
            </div>
        </div>
        <div class="card-body">
            <%= form_for('', url: guardar_ticket_taller_path,method: :post, remote: true,authenticity_token: true) do |form|%>
                <div class="card-body">
                    <div class="float-right">
                        <%= submit_tag "Guardar", class: "btn btn-success", style:"background-color: #2dbe06 !important;"%>
                    </div> <br><br>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" style="font-family: Arial; font-size:15px;">Clave taller:</label>
                        <div class="col-sm-0">
                            <%= form.text_field :clave, class: "form-control", style:"width: 250px !important;" %>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" style="font-family: Arial; font-size:14px;">Empresa*</label>
                        <div class="col-sm-0">
                        <%= collection_select('', :catalog_company_id, CatalogCompany.listado_empresas,:id, :nombre, {prompt:"Escribe el nombre de la empresa"}, {:class => " form-control m-input m-input--air uneditable-input chosen-select"})%>
                        </div>
                    </div>
                    
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" style="font-family: Arial; font-size:15px;">CEDIS*</label>
                        <div class="col-sm-0">
                        <%= collection_select('',:catalog_branch_id ,CatalogBranch.listado_cedis, :id, :decripcion, {prompt:"Seleccione el cedis"}, {:class => " form-control m-input m-input--air uneditable-input chosen-select"})%>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" style="font-family: Arial; font-size:15px;">Razón Social:</label>
                        <div class="col-sm-0">
                        <%= form.text_field :razonsocial, class: "form-control", style:"width: 250px !important;",required:true %>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" style="font-family: Arial; font-size:15px;">Nombre taller:</label>
                        <div class="col-sm-0">
                        <%= form.text_field :nombre_taller, class: "form-control", style:"width: 250px !important;",required:true %>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" style="font-family: Arial; font-size:15px;">Especialidad:</label>
                        <div class="col-sm-0">
                        <%= form.text_field :especialidad, class: "form-control", style:"width: 250px !important;" %>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" style="font-family: Arial; font-size:15px;">Responsable:</label>
                        <div class="col-sm-0">
                        <%= form.text_field :responsable, class: "form-control", style:"width: 250px !important;" %>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" style="font-family: Arial; font-size:15px;"> Teléfono:</label>
                        <div class="col-sm-0">
                        <%= form.text_field :telefono, class: "form-control", style:"width: 250px !important;" %>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" style="font-family: Arial; font-size:15px;">Domicilio:</label>
                        <div class="col-sm-0">
                        <%= form.text_area :domicilio, class: "form-control", style:"width: 250px !important;" %>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" style="font-family: Arial; font-size:15px;">Correo electrónico:</label>
                        <div class="col-sm-0">
                        <%= form.text_field :correo, class: "form-control", style:"width: 250px !important;" %>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" style="font-family: Arial; font-size:15px;">Condición de pago:</label>
                        <div class="col-sm-0">
                        <%= form.text_field :condicion, class: "form-control", style:"width: 250px !important;", required:true %>
                        </div>
                    </div>
                        <div class="form-group row">
                            <label class="col-sm-2 col-form-label" style="font-family: Arial; font-size:15px;">Fecha de certificación:</label>
                            <div class="col-sm-0">
                            <div class="input-group date" id="datetimepicker7" data-target-input="nearest" data-date-format="DD/MM/YYYY">
                                <%= form.text_field :fecha, class: "form-control datetimepicker-input",style:"width: 210px !important;", required:true %>
                                <div class="input-group-append" data-target="#datetimepicker7" data-toggle="datetimepicker">
                                    <div class="input-group-text"><i class="fa fa-calendar"></i></div>
                                </div>
                            </div>
                            </div>
                        </div>
                    </div>
            <% end %>
        </div>
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function(){
    $("#catalog_company_id").change(function(){
    var empresa = $(this).val();
    $.ajax({
    type: "POST",
    url: "<%= cedis_x_empresa_taller_path %>",
    data: {empresa: empresa, authenticity_token: $('meta[name=csrf-token]').attr('content')}
    })
    })
    })
  </script>