<%= form_with(model: catalog_branch, local: true) do |form| %>
  <% if catalog_branch.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(catalog_branch.errors.count, "error") %> Error al registrar:</h2>

      <ul>
        <% catalog_branch.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="float-right">
    <%= form.submit "Guardar", class: "btn btn-success", style:"background-color: #2dbe06 !important;" %>
  </div><br><br>
  <div class="form-group row">
    <label class="col-sm-2 col-form-label" style="font-family: Arial; font-size:16px;">Clave:</label>
    <div class="col-sm-0">
      <%= form.text_field :clave, class: "form-control", style:"width: 250px !important;" %>
    </div>
  </div>

  <div class="form-group row">
    <label class="col-sm-2 col-form-label" style="font-family: Arial; font-size:16px;">Abreviatura:</label>
    <div class="col-sm-0">
      <%= form.text_field :abreviacion, class: "form-control", style:"width: 250px !important;" %>
    </div>
  </div>

   <div class="form-group row">
    <label class="col-sm-2 col-form-label" style="font-family: Arial; font-size:16px;">Clave JD:</label>
    <div class="col-sm-0">
      <%= form.text_field :clave_jd, class: "form-control", style:"width: 250px !important;" %>
    </div>
  </div>

  <div class="form-group row">
    <label class="col-sm-2 col-form-label" style="font-family: Arial; font-size:16px;">Descripci√≥n:</label>
    <div class="col-sm-0">
      <%= form.text_field :decripcion, class: "form-control", style:"width: 250px !important;" %>
    </div>
  </div>

  <div class="form-group row">
    <label class="col-sm-2 col-form-label" style="font-family: Arial; font-size:16px;">Empresa*</label>
    <div class="col-sm-0">
      <%= collection_select(:catalog_branch,:catalog_company_id ,CatalogCompany.listado_empresas, :id, :nombre, {prompt:"Escribe el nombre de la empresa"}, {:class => " form-control m-input m-input--air uneditable-input chosen-select"})%>     
    </div>
  </div>

  <div class="form-group row">
    <label class="col-sm-2 col-form-label" style="font-family: Arial; font-size:16px;">Unidad negocio:</label>
    <div class="col-sm-0">
      <%= form.text_field :unidad_negocio, class: "form-control", style:"width: 250px !important;" %>
    </div>
  </div>

  <div class="form-group row">
    <label class="col-sm-2 col-form-label" style="font-family: Arial; font-size:16px;">Estatus:</label>
    <div class="col-sm-0">
    <div class="form-group col-lg-6">
      <label class="switch">
      <input type="checkbox" name="catalog_branch[status]"<% if @catalog_branch.status%> checked<%end%> >
      <span class="slider round"></span>
      </label>
      </div>
  </div>
  </div>
<% end %>
<style>
  .switch input:checked ~ span:after {
    opacity: 1;
    color: #ffffff;
    background-color:#ffffff;
}
.switch input:empty ~ span:before {
    background-color: #ccc;
}
.switch input:checked ~ span:before {
    background-color: #1bc5bd;
}
</style>