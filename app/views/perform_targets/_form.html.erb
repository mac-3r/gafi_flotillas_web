<%= form_with(model: perform_target, local: true) do |form| %>
  <% if perform_target.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(perform_target.errors.count, "error") %> Error al registrar:</h2>

      <ul>
        <% perform_target.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  
  <div class="float-right">
  <%= form.submit "Guardar", class: "btn btn-success", style:"background-color: #2dbe06 !important;" %>
  </div>
  <br>
  <br>

  
  <div class="form-group row">
    <label class="col-sm-2 col-form-label" style="font-family: Arial; font-size:16px;">Clave:</label>
    <div class="col-sm-0">
      <%= form.text_field :clave, class: "form-control", style:"width: 250px !important;" %>
    </div>
  </div>

  <div class="form-group row">
    <label class="col-sm-2 col-form-label" style="font-family: Arial; font-size:16px;">Objetivos de rendimiento (Kms):</label>
    <div class="col-sm-0">
      <%= form.number_field :objperform, class: "form-control", style:"width: 250px !important;" %>
    </div>
  </div>

  <div class="form-group row">
    <label class="col-sm-2 col-form-label" style="font-family: Arial; font-size:16px;">CEDIS*</label>
    <div class="col-sm-0">
      <%= collection_select(:perform_target,:catalog_branch_id ,CatalogBranch.listado_cedis, :id, :decripcion, {prompt:"Escribe el nombre de CEDIS"}, {:class => " form-control m-input m-input--air uneditable-input chosen-select"})%>     
    </div>
  </div>
  
  <div class="form-group row">
    <label class="col-sm-2 col-form-label" style="font-family: Arial; font-size:16px;">Tipo de veh√≠culo*</label>
    <div class="col-sm-0">
      <%= collection_select(:perform_target,:vehicle_type_id ,VehicleType.listado_tipos, :id, :descripcion, {prompt:"Selecciona el tipo de vehiculo"}, {:class => " form-control m-input m-input--air uneditable-input chosen-select"})%>     
    </div>
  </div>

  <div class="form-group row">
    <label class="col-sm-2 col-form-label" style="font-family: Arial; font-size:16px;">Rendimiento ideal (Kms):</label>
    <div class="col-sm-0">
      <%= form.number_field :idealperform, class: "form-control", style:"width: 250px !important;" %>
    </div>
  </div>

  <div class="form-group row">
    <label class="col-sm-2 col-form-label" style="font-family: Arial; font-size:16px;">Estatus:</label>
    <div class="col-sm-0">
    <div class="form-group col-lg-6">
      <label class="switch">
      <input type="checkbox" name="perform_target[status]"<% if @perform_target.status%> checked<%end%>>
      <span class="slider round"></span>
      </label>
      </div>
  </div>
  </div>

<% end %>
<style>
  .switch input:checked ~ span:after {
    opacity: 1;
    color: #ffffff;
    background-color:#ffffff;
}
.switch input:empty ~ span:before {
    background-color: #ccc;
}
.switch input:checked ~ span:before {
    background-color: #1bc5bd;
}
</style>