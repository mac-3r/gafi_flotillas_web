<div class="container">
  <div class="card card-custom gutter-b">
      <div class="row">
         <div class="col-lg-12">
            <div class="card-header">
              <div class="card-title">
                <h3 class="card-label float-left ">Responsable</h3>
                  <%= link_to 'Regresar', responsables_path, class:"btn btn-default float-right" %>
                </div>
             </div>
         </div>
      </div>
    <div class="card-body">
      <p>
        <strong>Nombre:</strong>
        <%= @responsable.nombre %>
      </p>

      <p>
        <strong>Status:</strong>
        <%= @responsable.status %>
      </p>
      <%= link_to 'Editar', edit_responsable_path(@responsable), class:"btn btn-default"%>
    </div>
  </div>
</div>
