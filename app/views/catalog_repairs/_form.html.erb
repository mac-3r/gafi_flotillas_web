<%= form_with(model: catalog_repair, local: true) do |form| %>
  <% if catalog_repair.errors.any? %>
  <div class="alert alert-danger">Error al registrar:
    <div id="error_explanation">
      <ul>
        <% catalog_repair.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
</div>
  <% end %>

  <div class="float-right">
    <%= form.submit "Guardar", class: "btn btn-success", style:"background-color: #2dbe06 !important;" %>
   </div>
   <br><br>
  <div class="form-group row">
    <label class="col-sm-2 col-form-label" style="font-family: Arial; font-size:15px;">Clave:</label>
    <div class="col-sm-0">
      <%= form.text_field :clave, class: "form-control", style:"width: 250px !important;" %>
    </div>
  </div>
  <div class="form-group row">
    <label class="col-sm-2 col-form-label" style="font-family: Arial; font-size:16px;">Abreviatura:</label>
    <div class="col-sm-0">
      <%= form.text_field :abreviatura, class: "form-control", style:"width: 250px !important;",required:true %>
    </div>
  </div>
  <div class="form-group row">
    <label class="col-sm-2 col-form-label" style="font-family: Arial; font-size:15px;">Detalle:</label>
    <div class="col-sm-0">
      <%= form.text_area :categoria, class: "form-control", style:"width: 250px !important;" %>
    </div>
  </div>
    <div class="form-group row">
      <label class="col-sm-2 col-form-label" style="font-family: Arial; font-size:15px;">Reparaci√≥n:</label>
      <div class="col-sm-0">
        <%= form.text_field :subcategoria, class: "form-control", style:"width: 250px !important;" %>
      </div>
    </div>
    <div class="form-group row">
    <label class="col-sm-2 col-form-label" style="font-family: Arial; font-size:15px;">Estatus:</label>
    <div class="col-sm-0">
    <div class="form-group col-lg-0">
      <label class="switch">
      <input type="checkbox" name="catalog_repair[status]"<% if @catalog_repair.status%> checked<%end%>>
      <span class="slider round"></span>
      </label>
      </div>
  </div>
  </div>
<% end %>
<style>
  .switch input:checked ~ span:after {
    opacity: 1;
    color: #ffffff;
    background-color:#ffffff;
}
.switch input:empty ~ span:before {
    background-color: #ccc;
}
.switch input:checked ~ span:before {
    background-color: #1bc5bd;
}
</style>