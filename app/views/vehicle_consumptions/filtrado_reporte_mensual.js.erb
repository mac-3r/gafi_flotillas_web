<% if @bandera_renderiza == 0%>
    $("#container_report").html("<%= escape_javascript(render partial: 'reporte_mensual_consulta') %>");
<% elsif @bandera_renderiza == 1 %>
    $("#container_report").html("<%= escape_javascript(render partial: 'reporte_mensual_default') %>");
<% elsif @bandera_renderiza == 2 %>
    toastr.options = {
        "closeButton": false,
        "debug": false,
        "newestOnTop": false,
        "progressBar": false,
        "positionClass": "toast-top-right",
        "preventDuplicates": false,
        "onclick": null,
        "showDuration": "300",
        "hideDuration": "1000",
        "timeOut": "5000",
        "extendedTimeOut": "1000",
        "showEasing": "swing",
        "hideEasing": "linear",
        "showMethod": "fadeIn",
        "hideMethod": "fadeOut"
    };
    toastr.info("Selecciona las fechas correctamente.");
<% end %>