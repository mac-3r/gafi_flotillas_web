<%= form_with(model: order_service_type, local: true) do |form| %>
  <% if order_service_type.errors.any? %>
    <div class="alert alert-danger">
      <h2><%= pluralize(order_service_type.errors.count, "error") %> Error al registrar:</h2>

      <ul>
        <% order_service_type.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="float-right">
  <%= form.submit "Guardar", class: "btn btn-success", style:"background-color: #2dbe06 !important;" %>
  </div>
  <br>
  <br>

  <div class="form-group row">
    <label class="col-sm-2 col-form-label" style="font-family: Arial; font-size:16px;">Clave:</label>
    <div class="col-sm-0">
      <%= form.text_field :nombre, class: "form-control", style:"width: 250px !important;" %>
    </div>
  </div>

  <div class="form-group row">
    <label class="col-sm-2 col-form-label" style="font-family: Arial; font-size:16px;">Descripci√≥n:</label>
    <div class="col-sm-0">
      <%= form.text_field :descripcion, class: "form-control", style:"width: 250px !important;" %>
    </div>
  </div>

  <div class="form-group row">
    <label class="col-sm-2 col-form-label" style="font-family: Arial; font-size:16px;">Origen:</label>
    <div class="col-sm-0">
      <%= form.text_field :origen, class: "form-control", style:"width: 250px !important;" %>
    </div>
  </div>
  <div class="form-group row">
    <label class="col-sm-2 col-form-label" style="font-family: Arial; font-size:16px;">Tipo:</label>
    <div class="col-sm-0">
      <%= form.select :tipo, options_for_select([["Preventivo" , 0],["Correctivo", 1]],:selected => form.object.tipo),{}, { class: "form form-group form-control"} %>
    </div>
  </div>
  <div class="form-group row">
    <label class="col-sm-2 col-form-label" style="font-family: Arial; font-size:16px;">Estatus:</label>
    <div class="col-sm-0">
    <div class="form-group col-lg-0">
      <label class="switch">
      <input type="checkbox" name="order_service_type[status]" <% if @order_service_type.status%> checked<%end%>>
      <span class="slider round"></span>
      </label>
      </div>
  </div>
  </div>
<% end %>
<script type="text/javascript">
  $(function () {
      $('#datetimepicker7').datetimepicker({
      format: 'L',
      locale: 'es'
      });
      $('#datetimepicker8').datetimepicker({
      format: 'L',
      locale: 'es',
      useCurrent: false
      });
      
      $("#datetimepicker7").on("change.datetimepicker", function (e) {
          $('#datetimepicker8').datetimepicker('minDate', e.date);
      });
      $("#datetimepicker8").on("change.datetimepicker", function (e) {
          $('#datetimepicker7').datetimepicker('maxDate', e.date);
      });
  });
</script>
<style>
  .switch input:checked ~ span:after {
    opacity: 1;
    color: #ffffff;
    background-color:#ffffff;
}
.switch input:empty ~ span:before {
    background-color: #ccc;
}
.switch input:checked ~ span:before {
    background-color: #1bc5bd;
}
</style>