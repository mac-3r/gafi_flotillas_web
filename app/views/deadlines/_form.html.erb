<%= form_with(model: deadline, local: true) do |form| %>
  <% if deadline.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(deadline.errors.count, "error") %> prohibited this deadline from being saved:</h2>

      <ul>
        <% deadline.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="float-right">
    <%= form.submit "Guardar", class: "btn btn-success", style:"background-color: #2dbe06 !important;" %>
  </div>
<br>
<br>
<br>
<div class="form-group row">
  <label class="col-sm-2 col-form-label" style="font-family: Arial; font-size:15px;">Fecha inicio:</label>
  <div class="col-sm-0">
    <div class="input-group date" id="datetimepicker1" data-target-input="nearest" data-date-format="DD/MM/YYYY">
      <%= form.text_field :fecha_inicio, class: "form-control datetimepicker-input", required:true%>
      <div class="input-group-append" data-target="#datetimepicker1" data-toggle="datetimepicker">
          <div class="input-group-text"><i class="fa fa-calendar"></i></div>
      </div>
    </div>
  </div>
</div>
<div class="form-group row">
  <label class="col-sm-2 col-form-label" style="font-family: Arial; font-size:15px;">Fecha fin:</label>
  <div class="col-sm-0">
    <div class="input-group date" id="datetimepicker2" data-target-input="nearest" data-date-format="DD/MM/YYYY">
      <%= form.text_field :fecha_fin, class: "form-control datetimepicker-input", required: true%>
      <div class="input-group-append" data-target="#datetimepicker2" data-toggle="datetimepicker">
          <div class="input-group-text"><i class="fa fa-calendar"></i></div>
      </div>
    </div>
  </div>
</div>
<div class="form-group row">
  <label class="col-sm-2 col-form-label" style="font-family: Arial; font-size:15px;">Estatus:</label>
  <div class="col-sm-0">
    <div class="form-group col-lg-6">
      <label class="switch">
        <input type="checkbox" name="deadline[estatus]"<% if @deadline.estatus%> checked<%end%>>
        <span class="slider round"></span>
    </label>
    </div>
  </div>
</div>
<% end %>
<style>
.switch input:checked ~ span:after {
  opacity: 1;
  color: #ffffff;
  background-color:#ffffff;
}
.switch input:empty ~ span:before {
  background-color: #ccc;
}
.switch input:checked ~ span:before {
  background-color: #1bc5bd;
}
</style>
<script type="text/javascript">
  $(function () {
      $('#datetimepicker1').datetimepicker({
      format: 'DD/MM/YYYY',
      locale: 'es'
      });
      $('#datetimepicker2').datetimepicker({
      format: 'DD/MM/YYYY',
      locale: 'es'
      });
  });
</script>