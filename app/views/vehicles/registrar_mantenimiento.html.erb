<br>
<div class="container">
    <div class="card card-custom gutter-b">
        <div class="row">
            <div class="col-lg-12">
                <div class="card-header">
                    <div class="card-title">
                        <h3 class="card-label float-left">Registrar mantenimiento para rehabilitación de vehículo</h3>
                        <%= link_to 'Regresar' ,venta_vehiculo_path(params[:id]) , class: "btn btn-default float-right" %>
                    </div>
                </div>
            </div>
        </div>
        <%= form_for('', url: guardar_mantenimiento_path,method: :post, remote: true,authenticity_token: true) do |f|%>
            
        <div class="card-body">
            <div class="float-right">
                <%= submit_tag "Guardar", class: "btn btn-success", style:"background-color: #2dbe06 !important;"%>
            </div> <br><br><br>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label" style="font-family: Arial; font-size:15px;">Reparación:</label>
                <div class="col-sm-0">
                  <%= f.text_field :reparacion, class: "form-control", style:"width: 310px !important;",required: true %>
                </div>
              </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label" style="font-family: Arial; font-size:15px;">Costo:</label>
                <div class="col-sm-0">
                  <div class="input-group mb-3">
                    <div class="input-group-prepend">
                      <span class="input-group-text">$</span>
                    </div>
                    <%= f.number_field :costo, step: :any,required: true,class:'form-control'%>
                  </div>
                </div>
            </div>
        </div>
        <% end %>
    </div>
</div>
<style>
    input[type=number]::-webkit-inner-spin-button, 
      input[type=number]::-webkit-outer-spin-button { 
        -webkit-appearance: none;
        -moz-appearance: none;
        appearance: none;
        margin: 0; 
    }
</style>