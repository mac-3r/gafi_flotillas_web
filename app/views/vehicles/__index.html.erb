<br><br>
<div class="container">
  <div class="card card-custom gutter-b">
    <div class="card-header">
      <div class="card-title">
        <span class="card-icon">
          <i class="fa fa-car-side text-primary"></i>
        </span>
        <h3 class="card-label">Maestro de Vehículos</h3>
      </div>
    </div>
    <div class="card-body">
      <div class="row">
        <div class="col-6">
          <h1>Vehicles</h1>
        </div>
        <div class="col-6 text-right">
          <%= link_to 'Nuevo Vehículo', new_vehicle_path, class: "btn btn-success" %>
        </div>
      </div>

      <table class="table">
        <thead>
          <tr>
            <th>Clave</th>
            <th>Numero Económico</th>
            <th>Empresa</th>
            <th>Sucursal</th>
            <th>Responsable</th>
            <th>Status</th>
            <th>Tipo de vehículo</th>
            <th>Marca</th>
            <th>Modelo</th>
            <th>Ruta</th>
            <th>Numero de placa</th>
            <th>Estado de plaqueo</th>
            <th>Litros autorizados</th>
            <th>Status</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @vehicles.each do |vehicle| %>
          <tr>
            <td><%= vehicle.clave %></td>
            <td><%= vehicle.numero_economico %></td>
            <td><%= vehicle.catalog_company_id %></td>
            <td><%= vehicle.responsable_id %></td>
            <td><%= vehicle.vehicle_status_id %></td>
            <td><%= vehicle.vehicle_type_id %></td>
            <td><%= vehicle.vehicle_brand_id %></td>
            <td><%= vehicle.vehicle_model_id %></td>
            <td><%= vehicle.catalog_route_id %></td>
            <td><%= vehicle.numero_placa %></td>
            <td><%= vehicle.plate_state_id %></td>
            <td><%= vehicle.litros_autorizados %></td>
            <td><%= vehicle.status %></td>
            <td><%= link_to 'Show', vehicle %></td>
            <td><%= link_to 'Edit', edit_vehicle_path(vehicle) %></td>
            <td><%= link_to 'Destroy', vehicle, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
          <% end %>
        </tbody>
      </table>

    </div>
  </div>
</div>