<table class="table table-bordered">
    <thead>
      <tr>
          <th>No. Econ√≥mico</th>
          <th>Tipo de archivo</th>
          <th>Nombre de archivo</th>
          <th>Fecha de vencimiento</th>
      </tr>
    </thead>
    <tbody>
      <%  @documents.each do |document| %>     
          <tr>
            <td><%= document.vehicle.numero_economico %></td>
            <td><%= document.tipo_archivo %></td>
            <td><%= link_to  document.nombre_archivo, document_detail_path(document.id), target: "_blank" %></td>
            <% if document.fecha_vencimiento <= Time.now %>
                <td style="background-color: tomato;"><%= document.fecha_vencimiento %></td>
            <% else %>
                <td><%= document.fecha_vencimiento %></td>
            <% end %>
          </tr>
      <% end %>
    </tbody>
</table>