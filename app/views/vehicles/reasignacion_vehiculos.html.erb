<br>
<div class="container">
    <div class="card card-custom">
        <div class="card-header flex-wrap border-0 pt-6 pb-0">
            <div class="card-title">
                <h3 class="card-label">Asignación de vehículos
                    <span class="text-muted pt-2 font-size-sm d-block">Catálogo de asignación, reasignación y aceptación de vehículos</span></h3>
            </div>
        </div>
        <div class="card-body">
            <div class="container">
                <div class="row">
                    <% @vehicle_pendientes_recibir.each do |vehiculo| %>
                        <div class="col-lg-3">
                            <div class="card border-light">
                                <div class="card-header"><a href="<%= checklist_asignacion_path(vehiculo.id, vehiculo.numero_economico, vehiculo.vehicle_type_id) %>"><strong>No. de vehículo: <%= vehiculo.numero_economico %></strong></a></div>
                                <div class="card-body">
                                    <p class="card-text"><strong>Tipo de vehículo:</strong> <%= vehiculo.vehicle_type.descripcion %>.</p>
                                    <p class="card-text"><strong>Estatus de vehículo:</strong> <%= vehiculo.vehicle_status.descripcion %>.</p>
                                    <p class="card-text"><strong>Placa:</strong> <%= vehiculo.numero_placa %>.</p>
                                    <% if vehiculo.fecha_compra%>
                                        <p class="card-text"><strong>Fecha de compra:</strong> <%= vehiculo.fecha_compra.strftime("%d-%m-%Y") %>.</p>
                                    <% end %>
                                    <% if vehiculo.valor_compra %>
                                        <p class="card-text"><strong>Valor de compra:</strong> <%= number_to_currency(vehiculo.valor_compra) %>.</p>
                                    <% end %>
                                </div>
                            </div>
                        </div>
                    <% end %>
                </div>
            </div>
        </div>
    </div>
</div>