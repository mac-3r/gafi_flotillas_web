<%= form_with(model: billed_company, local: true) do |form| %>
  <% if billed_company.errors.any? %>
    <div class="alert alert-danger">
      <h2><%= pluralize(billed_company.errors.count, "error") %> Error al registrar:</h2>

      <ul>
        <% billed_company.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="float-right">
    <%= form.submit "Guardar", class: "btn btn-success", style:"background-color: #2dbe06 !important;" %>
  </div>
    <br>
    <br>
    <div class="form-group row">
      <label class="col-sm-2 col-form-label" style="font-family: Arial; font-size:16px;">Clave JD:</label>
      <div class="col-sm-0">
        <%= form.text_field :clave_jd, class: "form-control", style:"width: 250px !important;" %>
      </div>
    </div>
    <div class="form-group row">
      <label class="col-sm-2 col-form-label" style="font-family: Arial; font-size:16px;">Nombre empresa:</label>
      <div class="col-sm-0">
        <%= form.text_field :nombre, class: "form-control", style:"width: 250px !important;" %>
      </div>
    </div>
    <div class="form-group row">
      <label class="col-sm-2 col-form-label" style="font-family: Arial; font-size:16px;">RFC:</label>
      <div class="col-sm-0">
        <%= form.text_field :rfc, class: "form-control", style:"width: 250px !important;" %>
      </div>
    </div>
    <div class="form-group row">
      <label class="col-sm-2 col-form-label" style="font-family: Arial; font-size:16px;">Tel√©fono:</label>
      <div class="col-sm-0">
        <%= form.text_field :telefono, class: "form-control", style:"width: 250px !important;" %>
      </div>
    </div>
    <div class="form-group row">
      <label class="col-sm-2 col-form-label" style="font-family: Arial; font-size:16px;">Domicilio:</label>
      <div class="col-sm-0">
        <%= form.text_area :domicilio, class: "form-control", style:"width: 250px !important;" %>
      </div>
    </div>
    <div class="form-group row">
    <label class="col-sm-2 col-form-label" style="font-family: Arial; font-size:16px;">Estatus:</label>
    <div class="col-sm-0">
    <div class="form-group col-lg-6">
      <label class="switch">
      <input type="checkbox" name="billed_company[status]"<% if @billed_company.status%> checked<%end%>>
      <span class="slider round"></span>
      </label>
      </div>
  </div>
  </div>
  

<% end %>
<style>
  .switch input:checked ~ span:after {
    opacity: 1;
    color: #ffffff;
    background-color:#ffffff;
}
.switch input:empty ~ span:before {
    background-color: #ccc;
}
.switch input:checked ~ span:before {
    background-color: #1bc5bd;
}
</style>