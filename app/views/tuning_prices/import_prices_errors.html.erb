<br>
<div class="container">
    <div class="card card-custom gutter-b">
        <div class="card-header">
            <div class="card-title">
                <h3 class="card-label">Errores de importación
                    <span class="text-muted pt-2 font-size-sm d-block"></span>
                </h3>
            </div>
            <div class="float-right">
              <%= link_to 'Regresar' , tuning_prices_path, class: "btn btn-default float-right" %>
            </div>
        </div>
        <div class="card-body">
            <h4>Se encontraron errores durante la importación:</h4>
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th width="20%">Fila en Excel</th>
                        <th width="50%">Problema</th>
                    </tr>
                </thead>
                <tbody>
                    <% @tuning_price.each do |price| %>
                        <tr>
                            <td><%= price[:fila] %></td>
                            <td><%= price[:problema] %></td>
                        </tr>
                    <% end %>
                </tbody>
            </table>
        </div>
    </div>
</div>