<%= form_with(model: catalog_area, local: true) do |form| %>
  <% if catalog_area.errors.any? %>
    <div class="alert alert-danger">
      <h2><%= pluralize(catalog_area.errors.count, "error") %>Error al registrar:</h2>

      <ul>
        <% catalog_area.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="float-right">
  <%= form.submit "Guardar", class: "btn btn-success", style:"background-color: #2dbe06 !important;" %>
  </div>
  <br>
  <br>
  <br>
  <div class="form-group row">
    <label class="col-sm-2 col-form-label" style="font-family: Arial; font-size:16px;">Abreviatura:</label>
    <div class="col-sm-0">
      <%= form.text_field :abreviacion, class: "form-control", style:"width: 250px !important;",required:true %>
    </div>
  </div>

  <div class="form-group row">
    <label class="col-sm-2 col-form-label" style="font-family: Arial; font-size:16px;">√Årea:</label>
    <div class="col-sm-0">
      <%= form.text_field :descripcion, class: "form-control", style:"width: 250px !important;" %>
    </div>
  </div>

  <div class="form-group row">
    <label class="col-sm-2 col-form-label" style="font-family: Arial; font-size:16px;">Clave:</label>
    <div class="col-sm-0">
      <%= form.text_field :clave, class: "form-control", style:"width: 250px !important;" %>
    </div>
  </div>

  <div class="form-group row">
    <label class="col-sm-2 col-form-label" style="font-family: Arial; font-size:16px;">Tipo:</label>
    <div class="col-sm-0">
      <%= form.select :tipo, options_for_select([["Administrativo" , 0],["Reparto", 1]],:selected => form.object.tipo),{}, { class: "form form-group form-control"} %>
    </div>
  </div>

  <div class="form-group row">
    <label class="col-sm-2 col-form-label" style="font-family: Arial; font-size:16px;">Estatus:</label>
    <div class="col-sm-0">
    <div class="form-group col-lg-6">
      <label class="switch">
      <input type="checkbox" name="catalog_area[status]" <% if @catalog_area.status%> checked<%end%>>
      <span class="slider round"></span>
      </label>
      </div>
  </div>
  </div>
<% end %>
<style>
  .switch input:checked ~ span:after {
    opacity: 1;
    color: #ffffff;
    background-color:#ffffff;
}
.switch input:empty ~ span:before {
    background-color: #ccc;
}
.switch input:checked ~ span:before {
    background-color: #1bc5bd;
}
</style>