<div class="container">
    <div class="card card-custom gutter-b">
        <div class="row">
            <div class="col-lg-12">
                <div class="card-header">
                    <div class="card-title">
                        <h3 class="card-label float-left">Editar concepto</h3>
                        <%= link_to 'Regresar', concepts_index_path , class: "btn btn-default float-right" %>
                    </div>
                </div>
            </div>
        </div>
        <div class="card-body">
            <%= form_for('', url: save_concept_path,method: :post, remote: true,authenticity_token: true) do |form|%>
                <div class="float-right">
                <%= form.submit "Guardar", class: "btn btn-success", style:"background-color: #2dbe06 !important;" %>
                </div>
                <br>
                <br>

                <div class="form-group row">
                    <label class="col-sm-2 col-form-label" style="font-family: Arial; font-size:16px;">Descripci√≥n:</label>
                    <div class="col-sm-0">
                    <%= form.text_field :descripcion,value: @concept.descripcion,class: "form-control", style:"width: 250px !important;" %>
                    </div>
                </div>
            <% end %>
        </div>
    </div>
</div>
