<br>
<div class="container">
    <div class="card card-custom gutter-b">
        <div class="card-header">
            <div class="card-title">
                <h3 class="card-label">Carga de documentos</h3>
            </div>
            <div class="float-right">  
                <br>        
                <%#= link_to 'Regresar', vehicles_path, class:"btn btn-default float-right" %>  
            </div>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-lg-4">
                    <%= collection_select('',:vehicle_id ,Vehicle.listado_vehiculos, :id, :nombre_p_vehiculo, {prompt:"General / Masivo"}, {:class => " form-control m-input m-input--air uneditable-input chosen-select", required: true})%>
                </div>
            </div>
            <br>
            <div id="contenedor_vehicle">
                <%= render 'contenedor_vehiculo' %>
            </div>
        </div>
    </div>
</div>
<script>
    $(document).ready(function(){
        $("#vehicle_id").change(function(){
            var valor = $(this).val();
            if(valor == ""){
                valor = 0;
            }
            $.ajax({
                type: "get",
                url: "buscar_vehiculo_carga_doc/" + valor
            })
        })
    })
</script>