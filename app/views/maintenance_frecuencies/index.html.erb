
<br>
<div class="container">
  <div class="card card-custom gutter-b">
  <div class="card-header">
    <div class="card-title">
      <h3 class="card-label">Frecuencia
      <span class="text-muted pt-2 font-size-sm d-block">Catálogo de frecuencia de mantenimiento</span>
      </h3>
    </div>
    <div class="float-right">
      <br>
      <%= link_to 'Nuevo', new_maintenance_frecuency_path,class:"btn btn-primary font-weight-bolder",style:"border-radius: 0.42rem;", data: { turbolinks: false } %>
    </div>
  </div>
    <div class="card-body">
      <%=form_for('', url: filtrado_frecuencias_path, remote: true) do |f|%>
        <div class="container">
          <div class="row">
            <div class="col">
              <label class="col-sm-0 col-form-label" style="font-family: Arial; font-size:15px;">Tipo de vehículo:</label>
              <%= collection_select('',:vehicle_type_id ,VehicleType.listado_tipos, :id, :descripcion, {prompt:"Seleccione el tipo"}, {:class => " form-control m-input m-input--air uneditable-input chosen-select"})%>
            </div>
            <div class="col">
              <label class="col-sm-0 col-form-label" style="font-family: Arial; font-size:15px;">Modelo:</label>
              <%= collection_select('',:catalog_model_id ,CatalogModel.listado_modelo, :id, :descripcion, {prompt:"Seleccione el tipo"}, {:class => " form-control m-input m-input--air uneditable-input chosen-select"})%>
            </div>
            <div class="col">
              <br><br>
              <%= submit_tag "Buscar", class:"btn btn-primary" %>
            </div>
          </div>
        </div>
      <% end %>
      <br><br>
      <div style="width: 100%" id="table_container">
        <%= render  "tabla" %>
      </div>
    </div>
  </div>
</div>

