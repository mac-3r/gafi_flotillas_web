<%= form_for(@valuation, method: "POST", url: valuations_path, remote: true, authenticity_token: true) do |form| %>
    <div class="form-row">
        <div class="form-group col-lg-4">
            <label>Tipo/zona fiscal *:</label><br>
            <%= form.text_field(:tipo_zona, class: "form-control", required: true) %>
        </div>
        <div class="form-group col-lg-4">
            <label>Descripci√≥n *:</label><br>
            <%= form.text_field(:descripcion, class: "form-control", required: true) %>
        </div>
        <div class="form-group col-lg-4">
            <label>Valor(%) *:</label><br>
            <%= form.number_field(:valor, class: "form-control", min: 0, max: 100, step: "0.1", required: true) %>
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-lg-4">
            <label>Cuenta *:</label><br>
            <%= form.text_field(:cuenta, class: "form-control", required: true) %>
        </div>
        <div class="form-group col-lg-4">
            
        </div>
        <div class="form-group col-lg-4">
            <div class="float-right">
                <%= form.submit "Guardar", class: "btn btn-success", style:"background-color: #2dbe06 !important;" %>
            </div>
        </div>
    </div>
<% end %>