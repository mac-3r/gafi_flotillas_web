<br>
<div class="container">
    <div class="card card-custom gutter-b">
          <div class="card-header ">
            <div class="card-title">
                <h3 class="card-label">Asignaciones a <%= @valuation.tipo_zona %></h3>
            </div>
            <div class="card-toolbar"> 
              <br>
                <div class="dropdown dropdown-inline mr-2">
                  <%= link_to  "Regresar", valuations_path, class: "btn btn-info float-right" %>
                </div>
            </div>
          </div>
        <div class="card-body">
          <div class="container">
            <%= form_for(@asignacion, url: asignacion_tasa_cedis_path, method: "POST", remote: true, authenticity_token: true) do |form| %>
                <div class="form-row">
                    <div class="form-group col-lg-3">
                        <label>Cedis</label>
                        <%= collection_select(:valuations_branch ,:catalog_branch_id ,@cedis, :id, :cedis_empresa, {prompt:"Seleccione el cedis"}, {:class => " form-control m-input m-input--air uneditable-input chosen-select", required: true})%>
                    </div>
                    <div class="form-group col-lg-3">
                        <label>Proveedor</label>
                        <%= collection_select(:valuations_branch ,:catalog_vendor_id ,@proveedores, :id, :razonsocial, {prompt:"Seleccione el proveedor"}, {:class => " form-control m-input m-input--air uneditable-input chosen-select", required: true})%>
                    </div>
                    <div class="form-group col-lg-3">
                        <label>Cuenta</label>
                        <%= form.text_field(:cuenta, class: "form-control", required: true) %>
                    </div>
                    <%= form.hidden_field :valuation_id, value: @valuation.id %>
                    <div class="form-group col-lg-3">
                        <%= form.submit "Asignar", class: "btn btn-success", style:"background-color: #2dbe06 !important; margin-top: 8%;" %>
                    </div>
                </div>
            <% end %>
            <br><br>
            <div style="width: 100%" id="table_container">
              <%= render  "tabla_asignaciones" %>
            </div>
          </div>
        </div>
    </div>
</div>
<script>
    $(document).ready(function(){
        $('.chosen-select').chosen();
    })
</script>