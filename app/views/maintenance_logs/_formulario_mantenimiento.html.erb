 <%#= form_with(model: budget_concept, local: true) do |form| %>
 <%= form_for(@maintenance_log, method: "post", url: crear_mantenimiento_path, remote: true) do |form| %>
 <% if maintenance_log.errors.any? %>
    <div class="alert alert-danger">
      <h2><%= pluralize(maintenance_log.errors.count, "error") %> Error al registrar:</h2>
      <ul>
        <% maintenance_log.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
 <div class="float-right">
   <%= form.submit "Guardar", class: "btn btn-success", style:"background-color: #2dbe06 !important;" %>
  </div>
  <br><br>
  <div class="form-group row">
   <label class="col-sm-2 col-form-label" style="font-family: Arial; font-size:15px;">Clave:</label>
   <div class="col-sm-0">
     <%= form.text_field :clave, class: "form-control", style:"width: 250px !important;" %>
   </div>
 </div>
  <div class="form-group row">
   <label class="col-sm-2 col-form-label" style="font-family: Arial; font-size:15px;">Linea:</label>
   <div class="col-sm-0">
    <%= collection_select(:maintenance_log,:catalog_brand_id ,CatalogBrand.listado_lineas, :id, :descripcion, {prompt:"Seleccione la linea"}, {:class => " form-control m-input m-input--air uneditable-input chosen-select"})%>
    </div>
 </div>

 <div class="form-group row">
   <label class="col-sm-2 col-form-label" style="font-family: Arial; font-size:15px;">Fecha:</label>
   <div class="col-sm-0">
     <div class="input-group date" id="datetimepicker8" data-target-input="nearest" data-date-format="DD/MM/YYYY">
       <%= form.text_field :fecha, class: "form-control datetimepicker-input"%>
         <div class="input-group-append" data-target="#datetimepicker8" data-toggle="datetimepicker">
           <div class="input-group-text"><i class="fa fa-calendar"></i></div>
         </div>
     </div>
   </div>
 </div>
<% end %>
<script type="text/javascript">
 $(function () {
     $('#datetimepicker7').datetimepicker({
     format: 'DD/MM/YYYY',
     locale: 'es'
     });
     $('#datetimepicker8').datetimepicker({
     format: 'DD/MM/YYYY',
     locale: 'es'
     });
 });
</script>