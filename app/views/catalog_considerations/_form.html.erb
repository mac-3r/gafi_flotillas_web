<%= form_with(model: catalog_consideration, local: true) do |form| %>
  <% if catalog_consideration.errors.any? %>
    <div class="alert alert-danger">
      <h2><%= pluralize(catalog_consideration.errors.count, "error") %> Error al registrar:</h2>
      <ul>
        <% catalog_consideration.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="float-right">
    <%= form.submit "Guardar", class: "btn btn-success", style:"background-color: #2dbe06 !important;" %>
   </div>
  <br><br>
  <div class="form-group row">
    <label class="col-sm-2 col-form-label" style="font-family: Arial; font-size:15px;">Clave:</label>
    <div class="col-sm-0">
      <%= form.text_field :clave, class: "form-control", style:"width: 250px !important;" %>
    </div>
  </div>
  <div class="form-group row">
    <label class="col-sm-2 col-form-label" style="font-family: Arial; font-size:16px;">Línea*</label>
    <div class="col-sm-0">
      <%= collection_select(:catalog_consideration,:catalog_brand_id ,CatalogBrand.listado_lineas, :id, :descripcion, {prompt:"Seleccione la linea"}, {:class => " form-control m-input m-input--air uneditable-input chosen-select"})%>
    </div>
  </div>
  <div class="form-group row">
    <label class="col-sm-2 col-form-label" style="font-family: Arial; font-size:16px;">Descripción de la consideración:</label>
    <div class="col-sm-0">
      <%= form.text_area :descripcion, class: "form-control", style:"width: 250px !important;" %>
    </div>
  </div>
<% end %>
