<% if @bandera_error %>
    toastr.options = {
        "closeButton": false,
        "debug": false,
        "newestOnTop": false,
        "progressBar": false,
        "positionClass": "toast-top-right",
        "preventDuplicates": false,
        "onclick": null,
        "showDuration": "300",
        "hideDuration": "1000",
        "timeOut": "5000",
        "extendedTimeOut": "1000",
        "showEasing": "swing",
        "hideEasing": "linear",
        "showMethod": "fadeIn",
        "hideMethod": "fadeOut"
    };
    toastr.error("<%= @texto %>", "Ocurri√≥ un error");
<% else %>
    $("#titulo_modal_general").text("Motivo de rechazo");
    $("#contenido").html("<%= escape_javascript(render partial: 'form_purchase_order') %>");
    $(".modal_general").modal("show");
<% end %>