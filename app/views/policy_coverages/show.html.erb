<br><br>
<div class="container">
  <div class="card card-custom gutter-b">
      <div class="row">
         <div class="col-lg-12">
            <div class="card-header">
              <div class="card-title">
                <h3 class="card-label float-left ">Cobertura de poliza</h3>
                  <%= link_to 'Regresar', policy_coverages_path, class:"btn btn-default float-right" %>
                </div>
             </div>
         </div>
      </div>
    <div class="card-body">
      <p>
        <strong>Clave:</strong>
        <%= @policy_coverage.clave %>
      </p>
      
      <p>
        <strong>Descripcion:</strong>
        <%= @policy_coverage.descripcion %>
      </p>
      
      <p>
        <strong>Status:</strong>
        <%= @policy_coverage.get_status %>
      </p>
      <%= link_to 'Editar', edit_policy_coverage_path(@policy_coverage), class:"btn btn-default" %>
    </div>
  </div>
</div>