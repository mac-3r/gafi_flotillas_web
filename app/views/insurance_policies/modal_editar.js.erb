<% if @respuesta_error == true %>
    toastr.options = {
        "closeButton": false,
        "debug": false,
        "newestOnTop": false,
        "progressBar": false,
        "positionClass": "toast-top-right",
        "preventDuplicates": false,
        "onclick": null,
        "showDuration": "300",
        "hideDuration": "1000",
        "timeOut": "5000",
        "extendedTimeOut": "1000",
        "showEasing": "swing",
        "hideEasing": "linear",
        "showMethod": "fadeIn",
        "hideMethod": "fadeOut"
    };
    toastr.error("<%= @mensaje %>", "Ocurrió un error");
<% else %>
    $("#contenido").html("<%= escape_javascript(render partial: 'form_editar_poliza') %>");
    $("#titulo_modal_general").text("Editar póliza");
    $(".modal_general").modal("show");
<% end %>