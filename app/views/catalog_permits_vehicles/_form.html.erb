<%= form_with(model: catalog_permits_vehicle, local: true) do |form| %>
  <% if catalog_permits_vehicle.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(catalog_permits_vehicle.errors.count, "error") %>Error al registrar:</h2>

      <ul>
        <% catalog_permits_vehicle.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

   <div class="float-right">
  <%= form.submit "Guardar", class: "btn btn-success", style:"background-color: #2dbe06 !important;" %>
  </div>
  <br>
  <br>

  <div class="form-group row">
    <label class="col-sm-2 col-form-label" style="font-family: Arial; font-size:16px;">Permiso vehicular:</label>
    <div class="col-sm-0">
      <%= form.text_field :descripcion, class: "form-control", style:"width: 250px !important;" %>
    </div>
  </div>

  <div class="form-group row">
    <label class="col-sm-2 col-form-label" style="font-family: Arial; font-size:16px;">Estatus:</label>
    <div class="col-sm-0">
    <div class="form-group col-lg-6">
      <label class="switch">
      <input type="checkbox" name="catalog_permit_vehicle[status]" <% if @catalog_permit_vehicle.status%> checked<%end%>>
      <span class="slider round"></span>
      </label>
      </div>
  </div>
  </div>

<% end %>
<style>
  .switch input:checked ~ span:after {
    opacity: 1;
    color: #ffffff;
    background-color:#ffffff;
}
.switch input:empty ~ span:before {
    background-color: #ccc;
}
.switch input:checked ~ span:before {
    background-color: #1bc5bd;
}
</style>