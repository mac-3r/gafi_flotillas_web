<br>
<div class="container">
    <div class="card card-custom gutter-b">
        <div class="card-header ">
            <div class="card-title">
                <h3 class="card-label">Tabla de competencias
                    <span class="text-muted pt-2 font-size-sm d-block">Tabla de competencias</span>
                </h3>
            </div>
            <div class="float-right">
              <br>              
                <%= link_to 'Nuevo', new_competition_table_path, id: "btn_nuevo_tabla",class:"btn btn-primary font-weight-bolder",style:"border-radius: 0.42rem;", data: { turbolinks: false } %>
            </div>
        </div>
        <div class="card-body">
            <div class="container">
              <%=form_for('', url: filtrado_competencias_path, remote: true) do |f|%>                <div class="row">
                    <div class="col">
                      <label class="col-sm-0 col-form-label" style="font-family: Arial; font-size:15px;">Tipo: </label>
                      <%= f.select(:tipo,  [['Todos', ''],['Combustible', 'Combustible'],['Mantenimiento y equipo de transporte','Mantenimiento y equipo de transporte'],['Maquinaria y equipo','Maquinaria y equipo'],['Permisos','Permisos'],['Plaqueo','Plaqueo'],['Seguros','Seguros']], {}, {:class => " form-control m-input m-input--air uneditable-input chosen-select"})%>
                    </div>
                    <div class="col">
                        <label class="col-sm-0 col-form-label" style="font-family: Arial; font-size:15px;">Autorizante:</label>
                        <%= collection_select('',:rol_id ,CatalogRole.listado_roles, :id, :nombre, {prompt:"Seleccione un autorizante"}, {:class => " form-control m-input m-input--air uneditable-input chosen-select",style: "width:100% !important;"})%>
                    </div>
                    <div class="col">
                        <label class="col-sm-0 col-form-label" style="font-family: Arial; font-size:15px;">CEDIS:</label>
                        <%= collection_select('',:catalog_branch_id ,CatalogBranch.listado_cedis, :id, :decripcion, {prompt:"Seleccione el cedis"}, {:class => " form-control m-input m-input--air uneditable-input chosen-select"})%>
                    </div>
                    <div class="col">
                      <br><br>
                      <%= submit_tag "Buscar", class:"btn btn-primary" %>
                    </div>
                </div>
               <% end %>
            </div>
            <br><br><br>
            <div style="width: 100%" id="table_container">
              <%= render  "tabla" %>
            </div>
        </div>
    </div>
</div>
