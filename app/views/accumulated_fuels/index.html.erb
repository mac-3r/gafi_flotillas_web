<br>
<div class="container">
  <div class="card card-custom gutter-b">
    <div class="card-header">
      <div class="card-title">
        <h3 class="card-label">Control de combustibles acumulado
          <span class="text-muted pt-2 font-size-sm d-block"></span>
        </h3>
      </div>
      <div class="float-right">
        <br>
        <%#= link_to 'Nuevo', new_vehicle_consumption_path,class:"btn btn-primary font-weight-bolder",style:"border-radius: 0.42rem;", data: { turbolinks: false } %>
        <!--<button type="button" class="btn btn-outline-success mr-2 " style="text-decoration:none" data-toggle="modal" data-target="#exampleModalCenter">
          Importar Datos
        </button>-->
      </div>
    </div>
    <div class="card-body">
      <table  class="table">
        <thead>
          <tr>
            <th>No económico</th>
            <th>CEDIS</th>
            <th>Tipo vehículo</th>
            <th>Línea</th>
            <th>Área</th>
            <th>Responsable</th>
            <th>Fecha carga</th>
            <th>Fecha inicio</th>
            <th>Fecha fin</th>
            <th>N factura</th>
            <th>Litros consumidos</th>
            <th>Importe base</th>
            <th>Importe total</th>
            <th>Km inicial</th>
            <th>Km actual</th>
            <th>Gasto</th>
            <th>Km recorrido</th>
            <th>Presupuesto</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @accumulated_fuels.each do |accumulated_fuel| %>
            <tr>
              <td><%= accumulated_fuel.no_economico %></td>
              <td><%= accumulated_fuel.cedis %></td>
              <td><%= accumulated_fuel.tipo_vehicu %></td>
              <td><%= accumulated_fuel.linea %></td>
              <td><%= accumulated_fuel.area %></td>
              <td><%= accumulated_fuel.responsable %></td>
              <td><%= accumulated_fuel.fecha_carga %></td>
              <td><%= accumulated_fuel.fecha_inicio %></td>
              <td><%= accumulated_fuel.fecha_fin %></td>
              <td><%= accumulated_fuel.n_factura %></td>
              <td><%= accumulated_fuel.litros_consumidos %></td>
              <td><%= accumulated_fuel.importe_base %></td>
              <td><%= accumulated_fuel.importe_total %></td>
              <td><%= accumulated_fuel.km_inicial %></td>
              <td><%= accumulated_fuel.km_actual %></td>
              <td><%= accumulated_fuel.gasto %></td>
              <td><%= accumulated_fuel.km_recorrido %></td>
              <td><%= accumulated_fuel.presupuesto %></td>
              <!--<td><%#= link_to 'Show', accumulated_fuel %></td>
              <td><%#= link_to 'Edit', edit_accumulated_fuel_path(accumulated_fuel) %></td>
              <td><%#= link_to 'Destroy', accumulated_fuel, method: :delete, data: { confirm: 'Are you sure?' } %></td>-->
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<%#= link_to 'New Accumulated Fuel', new_accumulated_fuel_path %>
