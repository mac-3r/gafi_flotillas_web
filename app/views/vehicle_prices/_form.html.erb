<%= form_with(model: vehicle_price, local: true) do |form| %>
  <% if vehicle_price.errors.any? %>
  <div class="alert alert-danger">Error al registrar:
    <div id="error_explanation">
      <ul>
        <% vehicle_price.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
    </div>
  <% end %>
  <div class="float-right">
    <%= form.submit "Guardar", class: "btn btn-success", style:"background-color: #2dbe06 !important;" %>
   </div>
  <br><br>
  <div class="form-group row">
    <label class="col-sm-2 col-form-label" style="font-family: Arial; font-size:15px;">Línea:</label>
    <div class="col-sm-0">
      <%= collection_select(:vehicle_price,:catalog_brand_id ,CatalogBrand.listado_lineas, :id, :descripcion, {prompt:"Seleccione la línea del vehículo"}, {:class => " form-control m-input m-input--air uneditable-input chosen-select"})%>
    </div>
  </div>

  <div class="form-group row">
    <label class="col-sm-2 col-form-label" style="font-family: Arial; font-size:15px;">Monto:</label>
    <div class="col-sm-0">
      
      <div class="input-group mb-3">
        <div class="input-group-prepend">
          <span class="input-group-text">$</span>
        </div>
        <%= form.number_field :monto, step: :any %>
      </div>
    </div>
  </div>

  <div class="form-group row">
    <label class="col-sm-2 col-form-label" style="font-family: Arial; font-size:15px;">Status:</label>
    <div class="col-sm-0">
      <%= form.check_box :status, style:"width: 25px; height: 25px;" %>
    </div>
  </div>

<% end %>
