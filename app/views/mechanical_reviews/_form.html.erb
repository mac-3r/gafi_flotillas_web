<%= form_with(model: mechanical_review, local: true) do |form| %>
  <% if mechanical_review.errors.any? %>
    <div class="alert alert-danger">
      <h2><%= pluralize(mechanical_review.errors.count, "error") %> Error al registrar:</h2>

      <ul>
        <% mechanical_review.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="float-right">
    <%= form.submit "Guardar", class: "btn btn-success", style:"background-color: #2dbe06 !important;" %>
   </div>
  <br><br>
  <div class="form-group row">
    <label class="col-sm-2 col-form-label" style="font-family: Arial; font-size:15px;">Clave:</label>
    <div class="col-sm-0">
      <%= form.text_field :clave, class: "form-control", style:"width: 250px !important;" %>
    </div>
  </div>
  <div class="form-group row">
    <label class="col-sm-2 col-form-label" style="font-family: Arial; font-size:16px;">Línea*</label>
    <div class="col-sm-4">
      <%= collection_select(:mechanical_review,:catalog_brand_id ,CatalogBrand.listado_lineas, :id, :descripcion, {prompt:"Seleccione la linea"}, {:class => " form-control m-input m-input--air uneditable-input chosen-select"})%>
    </div>
  </div>
  <div class="form-group row">
    <label class="col-sm-2 col-form-label" style="font-family: Arial; font-size:15px;">Descripción de la revisión</label>
    <div class="col-sm-0">
      <%= form.text_area :descripcion, class: "form-control", style:"width: 250px !important;" %>
    </div>
  </div>

  <div class="form-group row">
    <label class="col-sm-2 col-form-label" style="font-family: Arial; font-size:16px;">Estatus:</label>
    <div class="col-sm-0">
      <div class="form-group col-lg-6">
        <label class="switch">
          <input type="checkbox" name="mechanical_review[status]"<% if @mechanical_review.status%> checked<%end%>>
          <span class="slider round"></span>
        </label>
      </div>
    </div>
  </div>

<% end %>
<style>
  .switch input:checked ~ span:after {
    opacity: 1;
    color: #ffffff;
    background-color:#ffffff;
}
.switch input:empty ~ span:before {
    background-color: #ccc;
}
.switch input:checked ~ span:before {
    background-color: #1bc5bd;
}
</style>